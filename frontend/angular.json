{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "packageManager": "npm",
        "schematicCollections": [
            "angular-eslint"
        ],
        "analytics": false
    },
    "newProjectRoot": "projects",
    "projects": {
        "shell": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "projects/shell",
            "sourceRoot": "projects/shell/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-architects/native-federation:build",
                    "options": {},
                    "configurations": {
                        "development": {
                            "target": "shell:esbuild:development",
                            "dev": true
                        },
                        "integration": {
                            "target": "shell:esbuild:integration",
                            "dev": false
                        },
                        "cf-qa": {
                            "target": "shell:esbuild:cf-qa",
                            "dev": false
                        },
                        "production": {
                            "target": "shell:esbuild:production"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-architects/native-federation:build",
                    "options": {
                        "target": "shell:serve-original:development",
                        "rebuildDelay": 0,
                        "dev": true,
                        "port": 0
                    },
                    "configurations": {
                        "development": {
                            "target": "shell:serve-original:development"
                        },
                        "production": {
                            "target": "shell:serve-original:production"
                        }
                    }
                },
                "esbuild": {
                    "builder": "@angular/build:application",
                    "options": {
                        "browser": "projects/shell/src/main.ts",
                        "polyfills": [
                            "es-module-shims"
                        ],
            "tsConfig": "projects/shell/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "projects/shared/i18n",
                                "output": "/shared/i18n"
                            },
                            {
                                "glob": "**/*",
                                "input": "projects/shell/src/app/i18n",
                                "output": "/assets/shell/i18n"
                            },
                            "projects/shell/src/favicon.ico",
                            "projects/shell/src/assets"
                        ],
                        "styles": [
                            "projects/shell/src/styles.scss"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kB",
                                    "maximumError": "1MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "8kB",
                                    "maximumError": "10kB"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "outputHashing": "none"
                        },
                        "integration": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "outputHashing": "none",
                            "define": {
                                "ngDevMode": "true"
                            },
                            "fileReplacements": [
                                {
                                    "replace": "projects/shell/src/environments/environment.ts",
                                    "with": "projects/shell/src/environments/environment.integration.ts"
                                }
                            ]
                        },
                        "cf-qa": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "outputHashing": "none",
                            "define": {
                                "ngDevMode": "true"
                            },
                            "fileReplacements": [
                                {
                                    "replace": "projects/shell/src/environments/environment.ts",
                                    "with": "projects/shell/src/environments/environment.cf-qa.ts"
                                }
                            ]
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve-original": {
                    "builder": "@angular/build:dev-server",
                    "configurations": {
                        "development": {
                            "buildTarget": "shell:esbuild:development"
                        },
                        "integration": {
                            "buildTarget": "shell:esbuild:integration"
                        },
                        "cf-qa": {
                            "buildTarget": "shell:esbuild:cf-qa"
                        },
                        "production": {
                            "buildTarget": "shell:esbuild:production"
                        }
                    },
                    "defaultConfiguration": "development",
                    "options": {
                        "port": 4200
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "projects/shell/src/**/*.ts",
                            "projects/shell/src/**/*.html"
                        ]
                    }
                },
                "test": {
                    "builder": "@angular/build:unit-test"
                }
            }
        }
    }
}
}